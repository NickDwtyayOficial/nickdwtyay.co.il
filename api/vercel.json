{
  "version": 2,
  "builds": [
    {
      "src": "api/*.php",
      "use": "vercel-php@0.7.3"
    }
  ],
  "rewrites": [
    {
      "source": "/home.php",
      "destination": "/api/home.php"
    },
    {
      "source": "/videos.php",
      "destination": "/api/videos.php"
    },
    {
      "source": "/about.php",
      "destination": "/api/about.php"
    },
    {
      "source": "/contact.php",
      "destination": "/api/contact.php"
    },
    {
      "source": "/register.php",
      "destination": "/api/register.php"
    },
    {
      "source": "/profile.php",
      "destination": "/api/profile.php"
    },
    {
      "source": "/logout.php",
      "destination": "/api/logout.php"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.php"
    }
  ]
}
