{
  "version": 2,
  "builds": [
    {
      "src": "api/*.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "api/*.css",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/register.php",
      "destination": "/api/register.php"
    },
    {
      "source": "/profile.php",
      "destination": "/api/profile.php"
    },
    {
      "source": "/logout.php",
      "destination": "/api/logout.php"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.php"
    }
  ]
}
